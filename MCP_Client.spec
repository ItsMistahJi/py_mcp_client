if platform.system() == 'Darwin':
    app = BUNDLE(
        exe,
        name='MCP Client.app',
        icon='assets/icon.icns',
        bundle_identifier='com.mcp.client',
        info_plist={
            'CFBundleShortVersionString': '1.0.0',
            'CFBundleVersion': '1.0.0',
